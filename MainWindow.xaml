<Window
    x:Class="Calculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Calculator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Calculator"
    Width="300"
    Height="500"
    Background="#0D1117"
    Foreground="#C9D1D9"
    mc:Ignorable="d">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#21262D" />
            <Setter Property="Foreground" Value="#C9D1D9" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="BorderBrush" Value="#30363D" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label
            x:Name="ResultLabel"
            Grid.ColumnSpan="4"
            Padding="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Background="#161B22"
            Content="0"
            FontSize="60"
            Foreground="#C9D1D9" />

        <Button
            x:Name="AcButton"
            Grid.Row="1"
            Click="AcButton_Click"
            Content="AC" />
        <Button
            x:Name="NegativeButton"
            Grid.Row="1"
            Grid.Column="1"
            Click="NegativeButton_Click"
            Content="+/-" />
        <Button
            x:Name="PercentageButton"
            Grid.Row="1"
            Grid.Column="2"
            Click="PercentageButton_Click"
            Content="%" />
        <Button
            x:Name="DivideButton"
            Grid.Row="1"
            Grid.Column="3"
            Click="OperationButton_Click"
            Content="/" />
        <Button
            x:Name="SevenButton"
            Grid.Row="2"
            Grid.Column="0"
            Click="NumberButton_Click"
            Content="7" />
        <Button
            x:Name="EightButton"
            Grid.Row="2"
            Grid.Column="1"
            Click="NumberButton_Click"
            Content="8" />
        <Button
            x:Name="NineButton"
            Grid.Row="2"
            Grid.Column="2"
            Click="NumberButton_Click"
            Content="9" />
        <Button
            x:Name="MultiplyButton"
            Grid.Row="2"
            Grid.Column="3"
            Click="OperationButton_Click"
            Content="*" />
        <Button
            x:Name="FourButton"
            Grid.Row="3"
            Grid.Column="0"
            Click="NumberButton_Click"
            Content="4" />
        <Button
            x:Name="FiveButton"
            Grid.Row="3"
            Grid.Column="1"
            Click="NumberButton_Click"
            Content="5" />
        <Button
            x:Name="SixButton"
            Grid.Row="3"
            Grid.Column="2"
            Click="NumberButton_Click"
            Content="6" />
        <Button
            x:Name="MinusButton"
            Grid.Row="3"
            Grid.Column="3"
            Click="OperationButton_Click"
            Content="-" />
        <Button
            x:Name="OneButton"
            Grid.Row="4"
            Grid.Column="0"
            Click="NumberButton_Click"
            Content="1" />
        <Button
            x:Name="TwoButton"
            Grid.Row="4"
            Grid.Column="1"
            Click="NumberButton_Click"
            Content="2" />
        <Button
            x:Name="ThreeButton"
            Grid.Row="4"
            Grid.Column="2"
            Click="NumberButton_Click"
            Content="3" />
        <Button
            x:Name="PlusButton"
            Grid.Row="4"
            Grid.Column="3"
            Click="OperationButton_Click"
            Content="+" />
        <Button
            x:Name="ZeroButton"
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Click="NumberButton_Click"
            Content="0" />
        <Button
            x:Name="DecimalButton"
            Grid.Row="5"
            Grid.Column="2"
            Click="DecimalButton_Click"
            Content="." />
        <Button
            x:Name="EqualsButton"
            Grid.Row="5"
            Grid.Column="3"
            Background="#238636"
            Click="EqualsButton_Click"
            Content="=" />
    </Grid>
</Window>